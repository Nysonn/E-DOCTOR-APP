  <script>
    document.getElementById('accept-call').addEventListener('click', () => {
      alert('Call Accepted!');
      window.location.href = '/call-session';
    });

    document.getElementById('decline-call').addEventListener('click', () => {
      alert('Call Declined');
      // Optionally, you can redirect to another page or stay on this page.
    });
  </script>
</body>
</html>
